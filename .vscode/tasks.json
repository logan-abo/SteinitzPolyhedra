{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build DCEL project",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-g",

                //Source files
                "src/main_test.cpp",

                "src/DCEL/Implementations/DCEL.cpp",
                "src/DCEL/Implementations/Vertex.cpp",
                "src/DCEL/Implementations/HalfEdge.cpp",
                "src/DCEL/Implementations/Face.cpp",
                "src/DCEL/Implementations/ObjectViewer.cpp",

                "src/Graphs/Implementations/SimpleGraph.cpp",
                "src/Graphs/Implementations/PlanarEmbedding.cpp",

                "src/CirclePacking/Implementations/Circle.cpp",
                "src/CirclePacking/Implementations/CirclePacking.cpp",
                "src/CirclePacking/Implementations/PackingDisplay.cpp",
                "src/CirclePacking/Implementations/SteinitzPolyhedron.cpp",

                //Include directories
                "-Isrc/DCEL/Interfaces",
                "-Isrc/Graphs/Interfaces",
                "-Isrc/CirclePacking/Interfaces",
                "-IC:/SFML/SFML-3.0.2/include",
                "-IC:/eigen-5.0.0",

                //Library directories
                "-LC:/SFML/SFML-3.0.2/lib",

                //SFML libraries
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",

                "-o",
                "bin/main_test.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds the DCEL project and outputs executable to bin/"
        }
    ]
}